{
  "mcpServers": {
    "agent-builder": {
      "command": "uv",
      "args": [
        "run",
        "-m",
        "framework.mcp.agent_builder_server"
      ],
      "cwd": "core",
      "env": {
        "PYTHONPATH": ".:../tools/src"
      }
    },
    "tools": {
      "command": "uv",
      "args": [
        "run",
        "mcp_server.py",
        "--stdio"
      ],
      "cwd": "tools",
      "env": {
        "PYTHONPATH": "src:../core"
      }
    }
  }
}